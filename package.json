{
  "name": "miteru",
  "version": "0.6.6",
  "description": "simple file watcher",
  "main": "dist/miteru.js",
  "bin": {
    "miteru": "./cli.js"
  },
  "files": [
    "cli.js",
    "usage.txt",
    "dist/miteru.js"
  ],
  "scripts": {
    "prepublish": "npm test",
    "build": "browserify --node --no-bundle-external --standalone miteru -t [ babelify --presets [ env ] ] src/index.js -o dist/miteru.js 2>&1 | wooster",
    "wooster": "npm run pass 2>&1 | wooster",
    "lint": "spacestandard --fix src/**/*.js cli.js",
    "pass": "passlint src/*.js dist/*.js cli.js",
    "watch": "./cli.js src/*.js -e 'npm run wooster'",
    "test:source": "TEST_SOURCE=true node test/test.js | faucet",
    "test:only": "DEV=1 node test/test.js",
    "test": "npm run lint && npm run build && npm run pass && node test/test.js | faucet",
    "coverage": "nyc npm test"
  },
  "keywords": [
    "miteru",
    "file",
    "watcher",
    "filewatcher"
  ],
  "author": "talmobi <talmo.christian@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/talmobi/miteru"
  },
  "bugs": {
    "url": "https://github.com/talmobi/miteru/issues",
    "email": "talmo.christian@gmail.com"
  },
  "dependencies": {
    "minimatch": "~3.0.4",
    "minimist": "~1.2.0",
    "redstar": "0.0.2"
  },
  "devDependencies": {
    "babel-core": "~6.26.0",
    "babel-preset-env": "~1.6.1",
    "babelify": "~7.3.0",
    "browserify": "~14.4.0",
    "faucet": "0.0.1",
    "mkdirp": "~0.5.1",
    "ncp": "~2.0.0",
    "nyc": "~11.2.1",
    "passlint": "0.0.13",
    "rimraf": "~2.6.1",
    "spacestandard": "0.0.6",
    "tape": "~4.6.3",
    "wooster": "~0.3.3"
  }
}
