{
  "name": "miteru",
  "version": "0.5.1",
  "description": "simple file watcher",
  "main": "src/index.js",
  "bin": {
    "miteru": "./cli.js"
  },
  "files": [
    "cli.js",
    "src/index.js",
    "dist/miteru.js"
  ],
  "scripts": {
    "build:client": "browserify -t [ babelify --presets [ es2015 ] ] src/client-reload.js -o dist/miteru.js 2>&1 | wooster",
    "lint": "spacestandard --fix src/**/*.js",
    "test": "node test/test.js | faucet",
    "coverage": "nyc npm test"
  },
  "keywords": [
    "miteru"
  ],
  "author": "talmobi <talmo.christian@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/talmobi/miteru"
  },
  "bugs": {
    "url": "https://github.com/talmobi/miteru/issues",
    "email": "talmo.christian@gmail.com"
  },
  "dependencies": {
    "minimatch": "~3.0.4",
    "minimist": "~1.2.0",
    "redstar": "0.0.1"
  },
  "devDependencies": {
    "babel-preset-es2015": "~6.24.1",
    "babelify": "~7.3.0",
    "browserify": "~14.4.0",
    "faucet": "0.0.1",
    "mkdirp": "~0.5.1",
    "ncp": "~2.0.0",
    "nyc": "~11.2.1",
    "rimraf": "~2.6.1",
    "spacestandard": "0.0.6",
    "tape": "~4.6.3",
    "wooster": "~0.1.2"
  }
}
